# ===========================================
# Careca.ai - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# Whisper Model: tiny, base, small, medium, large-v2, large-v3
WHISPER_MODEL=medium

# Device: cpu or cuda (if you have NVIDIA GPU)
DEVICE=cuda

# Compute type: int8 (CPU), float16 (GPU)
COMPUTE_TYPE=float16

# File limits
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=mp3,wav,m4a,ogg,webm,flac,opus,ptt

# Maintenance
CLEANUP_AFTER_HOURS=24

# ===========================================
# SECURITY - REQUIRED! Generate unique values
# ===========================================
# Generate SECRET_KEY with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=

# Admin password (min 8 characters, use strong password)
ADMIN_PASSWORD=

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:8000

# ===========================================
# DATABASE - PostgreSQL (Docker)
# ===========================================
# These are used by docker-compose.yml
DB_USER=careca
DB_PASSWORD=
DB_NAME=carecadb

# SQLite fallback (used if DATABASE_URL is not set)
DATABASE_PATH=/app/data/transcriptions.db
